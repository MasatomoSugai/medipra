    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-162444859-1');
    </script>
    <%= display_meta_tags(default_meta_tags)%>
    <%= csrf_meta_tags %>
