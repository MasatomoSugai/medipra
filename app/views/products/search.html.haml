
.default_container
  =render 'top'

  .body
    =render 'search_form'

    .results
      .results__keyword
        検索ワード  "#{params[:q][:name_cont]}"
      .results__total-count
        検索結果     #{@products.total_count}件
      %table.results__table
        %tr.resutls__table-title
          %th 製品名
          %th 薬価
          %th 規格
          -# %th 薬価計算（後で実装する）

        - @products.each do |product|
          %tr.results__table-data
            %td
              - if product.generic == "後発品"
                後発
              = product.name
            %td
              = "#{(product.price).to_f}"
            %td 
              = product.standard
            -# %td 3 錠 32円(税込み)（後で実装する）
          - @products.each do |product|
            %tr.results__table-data
              %td
                - if product.generic == "後発品"
                  後発
                = product.name
              %td
                = "#{(product.price).to_f}"
              %td 
                = product.standard
              -# %td 3 錠 32円(税込み)（後で実装する）

      = paginate(@products)

